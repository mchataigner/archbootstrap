# Maintainer: Mathieu Chataigner <mathieu.chataigner@gmail.com>

pkgrel=2
pkgver=1
pkgname=moot-sudoer
pkgdesc="Dummy package to handle all common my dependencies."
url="https://github.com/mchataigner/archbootstrat/"
arch=('any')
license=('MIT')
makedepends=('coreutils')
depends=('sudo')
backup=("etc/sudoers.d/common" "etc/sudoers.d/admin")
makedepends=()
source=('common' 'admin_sudoers' 'install')
md5sums=('1b0864e65d9dce27a618debb8316a21d'
         '96af035689e3656339723c6a0e798e44'
         '100ce1aaaf96c21913d7ec3a5fdc43f6')
options=('!strip')
install='install'
_gitname='moot-base'

package() {
	mkdir -p $pkgdir/etc/sudoers.d
	chmod 750 $pkgdir/etc/sudoers.d
	cp admin_sudoers $pkgdir/etc/sudoers.d/admin
	cp common $pkgdir/etc/sudoers.d/common
	chmod 440 $pkgdir/etc/sudoers.d/common
	chmod 440 $pkgdir/etc/sudoers.d/admin
}

